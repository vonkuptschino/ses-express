doctype html
html
  head
    meta(charset='utf-8')
    title kodaktor.ru/session_post Express sessions demo POST form no-ajax
    style.
      * {font-family: sans-serif; zoom: 110%} h2 {text-align: center} [type='submit'] {width: 99%; margin-top: 3px}
      form {border: outset 2px; border-radius: 10px; padding: 10px; width: 250px; margin-left: 50%; transform:translate(-50%);}
      input, button { border-radius: 6px!important; border-width: 1px; width: 99%}
    link(rel='stylesheet', href='https://cdn.rawgit.com/twbs/bootstrap/48938155eb24b4ccdde09426066869504c6dab3c/dist/css/bootstrap.min.css')
  body
    h2 Введите логин и пароль!
    form(method='post', action='/login/check')
      input(name='login', placeholder='логин')
      br
      input(name='pass', type='password', placeholder='пароль')
      br
      input.btn.btn-primary(type='submit', value='Залогиниться')
